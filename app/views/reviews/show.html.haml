.row
  .col-xs-12
    %h2= @review.title
    - flash.each do |key, value|
      %div(class='alert alert-#{key}')
        = "#{value}"
  .col-xs-3
    = image_tag @review.book.book_cover.url, class: 'img-responsive'
  .col-xs-9
    %h3.content-title= @review.book.title
    %p
      %span.glyphicon.glyphicon-user
      = @review.user.name
      = "評価：#{@review.evaluation}"
    -# TODO いいね！、読んだことある！はあとで実装
      %span.glyphicon.glyphicon-heart-empty
      3                  　
      %span.glyphicon.glyphicon-pencil
      5
    %p= @review.content
    - if current_user?(@review.user)
      = link_to '編集', edit_review_path(@review), class: 'btn btn-default'
