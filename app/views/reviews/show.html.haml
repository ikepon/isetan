.container
  .row
    #contents
      .col-md-8
        .row
          %h2= @review.title
          .col-sm-12.book-box
            .row
              .col-xs-3
                = image_tag "agile_rails.jpeg", width: "150px"
              .col-xs-9
                %h3.content-title= @review.book.title
                %p
                  %span.glyphicon.glyphicon-user
                  = @review.user.name
                  = "評価：#{@review.evaluation}"
                -# TODO いいね！、読んだことある！はあとで実装
                  %span.glyphicon.glyphicon-heart-empty
                  3                  　
                  %span.glyphicon.glyphicon-pencil
                  5
                %p= @review.content
                - if current_user?(@review.user)
                  = link_to '編集', edit_review_path(@review), class: 'btn btn-default'
